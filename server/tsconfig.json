{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "alwaysStrict": true,
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
